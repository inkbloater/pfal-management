# MQTT Configuration
## MQTT broker host for the controller to connect to.
## For local development with docker-compose, use host `localhost` (broker is mapped to 1883).
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=pfal_controller

# MQTT Topics
MQTT_TOPIC_PH=pfal/sensors/ph
MQTT_TOPIC_EC=pfal/sensors/ec
MQTT_TOPIC_TEMP=pfal/sensors/temperature
MQTT_TOPIC_BME280=pfal/sensors/bme280

# MQTT Command Topics
MQTT_TOPIC_PH_PUMP=pfal/actuators/ph_pump
MQTT_TOPIC_NUTRIENT_PUMP=pfal/actuators/nutrient_pump
MQTT_TOPIC_MAIN_PUMP=pfal/actuators/main_pump
MQTT_TOPIC_LIGHTS=pfal/actuators/lights
MQTT_TOPIC_FANS=pfal/actuators/fans

# InfluxDB 2 Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=pfal
INFLUXDB_BUCKET=pfal_sensors

# Control Thresholds
PH_TARGET=6.0
PH_TOLERANCE=0.3
EC_TARGET=1.5
EC_TOLERANCE=0.2
TEMP_MIN=20.0
TEMP_MAX=28.0

# Schedule Configuration (24-hour format)
LIGHTS_ON_HOUR=6
LIGHTS_OFF_HOUR=22

# Pump Control
PH_PUMP_DURATION_MS=1000
NUTRIENT_PUMP_DURATION_MS=2000
